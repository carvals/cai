<?xml version="1.0" encoding="utf-8"?>
<ContentDialog x:Class="CAI_design_1_chat.Presentation.Dialogs.AISettingsDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="AI Settings"
               PrimaryButtonText="Save"
               SecondaryButtonText="Cancel"
               DefaultButton="Primary"
               Width="600"
               Height="500">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <StackPanel Grid.Row="0" Margin="0,0,0,16">
      <TextBlock Text="Configure AI Providers" 
                 FontSize="18" 
                 FontWeight="SemiBold"
                 Margin="0,0,0,8"/>
      <TextBlock Text="Select and configure your preferred AI provider for chat conversations."
                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                 TextWrapping="Wrap"/>
    </StackPanel>

    <!-- Provider Selection -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <StackPanel Spacing="16">
        
        <!-- Context Size Configuration -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
          <StackPanel Spacing="12">
            <TextBlock Text="Context Configuration" 
                       FontWeight="SemiBold"
                       FontSize="14"/>
            
            <TextBlock Text="Configure how many previous messages to include in AI conversations."
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="12"
                       TextWrapping="Wrap"/>
            
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              
              <TextBlock Grid.Column="0"
                         Text="Number of messages in context:"
                         VerticalAlignment="Center"
                         Margin="0,0,12,0"/>
              
              <Slider x:Name="ContextSizeSlider"
                      Grid.Column="1"
                      Minimum="1"
                      Maximum="20"
                      Value="10"
                      StepFrequency="1"
                      TickFrequency="5"
                      TickPlacement="BottomRight"
                      ValueChanged="ContextSizeSlider_ValueChanged"
                      Margin="0,0,12,0"/>
              
              <TextBlock x:Name="ContextSizeValue"
                         Grid.Column="2"
                         Text="10"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"
                         MinWidth="30"
                         TextAlignment="Center"/>
            </Grid>
            
            <TextBlock x:Name="ContextSizeInfo"
                       Text="Estimated tokens: ~250 (10 messages × ~25 tokens each)"
                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                       FontSize="11"
                       FontStyle="Italic"/>
          </StackPanel>
        </Border>
        
        <!-- Ollama Section -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
          <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <RadioButton x:Name="OllamaRadio" 
                          GroupName="AIProvider"
                          Content="Ollama (Local)"
                          FontWeight="SemiBold"/>
              <FontIcon Glyph="🖥️" FontSize="16" VerticalAlignment="Center"/>
            </StackPanel>
            
            <TextBlock Text="Run AI models locally on your machine"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="12"/>
            
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              
              <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="Server URL" FontSize="12" FontWeight="Medium"/>
                <TextBox x:Name="OllamaUrlBox" 
                         Text="http://localhost:11434"
                         PlaceholderText="http://localhost:11434"/>
                
                <TextBlock Text="Model" FontSize="12" FontWeight="Medium" Margin="0,8,0,0"/>
                <ComboBox x:Name="OllamaModelBox" 
                          PlaceholderText="Select model..."
                          MinWidth="200"
                          IsEditable="False">
                  <ComboBoxItem Content="llama3.2"/>
                  <ComboBoxItem Content="llama3.1"/>
                  <ComboBoxItem Content="llama3"/>
                  <ComboBoxItem Content="llama2"/>
                  <ComboBoxItem Content="llama2:13b"/>
                  <ComboBoxItem Content="llama2:70b"/>
                  <ComboBoxItem Content="codellama"/>
                  <ComboBoxItem Content="codellama:13b"/>
                  <ComboBoxItem Content="codellama:34b"/>
                  <ComboBoxItem Content="mistral"/>
                  <ComboBoxItem Content="mistral:7b"/>
                  <ComboBoxItem Content="mixtral"/>
                  <ComboBoxItem Content="mixtral:8x7b"/>
                  <ComboBoxItem Content="neural-chat"/>
                  <ComboBoxItem Content="phi3"/>
                  <ComboBoxItem Content="phi3:mini"/>
                  <ComboBoxItem Content="gemma"/>
                  <ComboBoxItem Content="gemma:7b"/>
                  <ComboBoxItem Content="qwen"/>
                  <ComboBoxItem Content="qwen:14b"/>
                  <ComboBoxItem Content="deepseek-coder"/>
                  <ComboBoxItem Content="starcoder"/>
                  <ComboBoxItem Content="vicuna"/>
                  <ComboBoxItem Content="orca-mini"/>
                </ComboBox>
              </StackPanel>
              
              <StackPanel Grid.Column="1" 
                          Spacing="8"
                          VerticalAlignment="Bottom">
                <Button x:Name="OllamaRefreshButton" 
                                Content="🔄 Refresh" 
                                Width="120" 
                                Margin="0,5,0,0" 
                                Click="RefreshOllamaModels" />
                        
                <Button x:Name="OllamaTestButton"
                        Content="Test"
                        Width="100"
                        Height="32"
                        Click="TestOllamaConnection"/>
              </StackPanel>
            </Grid>
          </StackPanel>
        </Border>

        <!-- OpenAI Section -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
          <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <RadioButton x:Name="OpenAIRadio" 
                          GroupName="AIProvider"
                          Content="OpenAI"
                          FontWeight="SemiBold"/>
              <FontIcon Glyph="🤖" FontSize="16" VerticalAlignment="Center"/>
            </StackPanel>
            
            <TextBlock Text="GPT-4, GPT-3.5 Turbo and other OpenAI models"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="12"/>
            
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              
              <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="API Key" FontSize="12" FontWeight="Medium"/>
                <PasswordBox x:Name="OpenAIKeyBox" 
                             PlaceholderText="sk-..."/>
                
                <TextBlock Text="Model" FontSize="12" FontWeight="Medium" Margin="0,8,0,0"/>
                <ComboBox x:Name="OpenAIModelBox" 
                          PlaceholderText="Select model..."
                          MinWidth="200">
                  <ComboBoxItem Content="gpt-4"/>
                  <ComboBoxItem Content="gpt-4-turbo"/>
                  <ComboBoxItem Content="gpt-3.5-turbo"/>
                  <ComboBoxItem Content="gpt-3.5-turbo-16k"/>
                </ComboBox>
                
                <TextBlock Text="Organization ID (Optional)" FontSize="12" FontWeight="Medium" Margin="0,8,0,0"/>
                <TextBox x:Name="OpenAIOrgBox" 
                         PlaceholderText="org-..."/>
              </StackPanel>
              
              <StackPanel Grid.Column="1" 
                          Spacing="8"
                          VerticalAlignment="Bottom">
                <Button x:Name="OpenAIRefreshButton" 
                        Content="🔄 Refresh" 
                        Width="120" 
                        Margin="0,5,0,0" 
                        Click="RefreshOpenAIModels" />
                        
                <Button x:Name="OpenAITestButton"
                        Content="Test"
                        Width="100"
                        Height="32"
                        Click="TestOpenAIConnection"/>
              </StackPanel>
            </Grid>
          </StackPanel>
        </Border>

        <!-- Anthropic Section -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
          <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <RadioButton x:Name="AnthropicRadio" 
                          GroupName="AIProvider"
                          Content="Anthropic Claude"
                          FontWeight="SemiBold"/>
              <FontIcon Glyph="🧠" FontSize="16" VerticalAlignment="Center"/>
            </StackPanel>
            
            <TextBlock Text="Claude 3 Opus, Sonnet, and Haiku models"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="12"/>
            
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              
              <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="API Key" FontSize="12" FontWeight="Medium"/>
                <PasswordBox x:Name="AnthropicKeyBox" 
                             PlaceholderText="sk-ant-..."/>
                
                <TextBlock Text="Model" FontSize="12" FontWeight="Medium" Margin="0,8,0,0"/>
                <ComboBox x:Name="AnthropicModelBox" 
                          PlaceholderText="Select model..."
                          MinWidth="200">
                  <ComboBoxItem Content="claude-3-opus-20240229"/>
                  <ComboBoxItem Content="claude-3-sonnet-20240229"/>
                  <ComboBoxItem Content="claude-3-haiku-20240307"/>
                  <ComboBoxItem Content="claude-2.1"/>
                </ComboBox>
              </StackPanel>
              
              <StackPanel Grid.Column="1" 
                          Spacing="8"
                          VerticalAlignment="Bottom">
                <Button x:Name="AnthropicRefreshButton" 
                        Content="🔄 Refresh" 
                        Width="120" 
                        Margin="0,5,0,0" 
                        Click="RefreshAnthropicModels" />
                        
                <Button x:Name="AnthropicTestButton"
                        Content="Test"
                        Width="100"
                        Height="32"
                        Click="TestAnthropicConnection"/>
              </StackPanel>
            </Grid>
          </StackPanel>
        </Border>

        <!-- Google Gemini Section -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
          <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <RadioButton x:Name="GeminiRadio" 
                          GroupName="AIProvider"
                          Content="Google Gemini"
                          FontWeight="SemiBold"/>
              <FontIcon Glyph="💎" FontSize="16" VerticalAlignment="Center"/>
            </StackPanel>
            
            <TextBlock Text="Gemini Pro and other Google AI models"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="12"/>
            
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              
              <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="API Key" FontSize="12" FontWeight="Medium"/>
                <PasswordBox x:Name="GeminiKeyBox" 
                             PlaceholderText="AI..."/>
                
                <TextBlock Text="Model" FontSize="12" FontWeight="Medium" Margin="0,8,0,0"/>
                <ComboBox x:Name="GeminiModelBox" 
                          PlaceholderText="Select model..."
                          MinWidth="200">
                  <ComboBoxItem Content="gemini-pro"/>
                  <ComboBoxItem Content="gemini-pro-vision"/>
                  <ComboBoxItem Content="gemini-1.5-pro"/>
                  <ComboBoxItem Content="gemini-1.5-flash"/>
                </ComboBox>
              </StackPanel>
              
              <StackPanel Grid.Column="1" 
                          Spacing="8"
                          VerticalAlignment="Bottom">
                <Button x:Name="GeminiRefreshButton" 
                        Content="🔄 Refresh" 
                        Width="120" 
                        Margin="0,5,0,0" 
                        Click="RefreshGeminiModels" />
                        
                <Button x:Name="GeminiTestButton"
                        Content="Test"
                        Width="100"
                        Height="32"
                        Click="TestGeminiConnection"/>
              </StackPanel>
            </Grid>
          </StackPanel>
        </Border>

        <!-- Mistral Section -->
        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
          <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <RadioButton x:Name="MistralRadio" 
                          GroupName="AIProvider"
                          Content="Mistral AI"
                          FontWeight="SemiBold"/>
              <FontIcon Glyph="🌪️" FontSize="16" VerticalAlignment="Center"/>
            </StackPanel>
            
            <TextBlock Text="Mistral Large, Medium, and other European AI models"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="12"/>
            
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              
              <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="API Key" FontSize="12" FontWeight="Medium"/>
                <PasswordBox x:Name="MistralKeyBox" 
                             PlaceholderText="..."/>
                
                <TextBlock Text="Model" FontSize="12" FontWeight="Medium" Margin="0,8,0,0"/>
                <ComboBox x:Name="MistralModelBox" 
                          PlaceholderText="Select model..."
                          MinWidth="200">
                  <ComboBoxItem Content="mistral-large-latest"/>
                  <ComboBoxItem Content="mistral-medium-latest"/>
                  <ComboBoxItem Content="mistral-small-latest"/>
                  <ComboBoxItem Content="open-mistral-7b"/>
                </ComboBox>
              </StackPanel>
              
              <StackPanel Grid.Column="1" 
                          Spacing="8"
                          VerticalAlignment="Bottom">
                <Button x:Name="MistralRefreshButton" 
                        Content="🔄 Refresh" 
                        Width="120" 
                        Margin="0,5,0,0" 
                        Click="RefreshMistralModels" />
                        
                <Button x:Name="MistralTestButton"
                        Content="Test"
                        Width="100"
                        Height="32"
                        Click="TestMistralConnection"/>
              </StackPanel>
            </Grid>
          </StackPanel>
        </Border>

      </StackPanel>
    </ScrollViewer>
  </Grid>
</ContentDialog>
