                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                             TextWrapping="Wrap"
                             FontSize="14" />
                </Border>
                
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,4,0,0"
                            Spacing="8">
                  <Button Background="Transparent"
