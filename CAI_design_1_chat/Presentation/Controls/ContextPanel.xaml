<UserControl x:Class="CAI_design_1_chat.Presentation.Controls.ContextPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:CAI_design_1_chat.Presentation.Controls">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16" Margin="16">
                <!-- Header with Refresh Button -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Context Title -->
                    <TextBlock Grid.Column="0"
                               Text="Context" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                               VerticalAlignment="Center" />
                    
                    <!-- Refresh Button -->
                    <Button x:Name="RefreshButton"
                            Grid.Column="1"
                            Click="RefreshButton_Click"
                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Width="32"
                            Height="32"
                            ToolTipService.ToolTip="Refresh context files">
                        <FontIcon Glyph="ðŸ”„" 
                                  FontSize="14" 
                                  Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                    </Button>
                </Grid>
                
                <!-- Divider -->
                <Border Height="1" 
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" 
                        Margin="0,0,0,8" />
                
                <!-- Context Files List -->
                <StackPanel x:Name="ContextFilesContainer" Spacing="8">
                    <!-- Files will be loaded here dynamically -->
                </StackPanel>
                
                <!-- Empty State -->
                <TextBlock x:Name="EmptyStateText"
                           Text="No context"
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,32,0,0"
                           Visibility="Visible" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
