<?xml version="1.0" encoding="utf-8"?>
<ContentDialog x:Class="CAI_design_1_chat.Presentation.EnhancedFileUploadDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="Charger le contenu d'un fichier"
               PrimaryButtonText="Sauvegarder"
               CloseButtonText="Annuler"
               DefaultButton="Primary"
               Background="{ThemeResource MaterialSurfaceBrush}"
               RequestedTheme="Default"
               PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <ContentDialog.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource MaterialPrimaryBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource MaterialOnPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource MaterialSecondaryBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource MaterialOnSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </ContentDialog.Resources>

    <Grid Width="1200" Height="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Section: File Upload & Actions -->
        <Grid Grid.Row="0" Margin="24,16,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: File Drop Zone -->
            <StackPanel Grid.Column="0" Spacing="12">
                <!-- Drop Zone -->
                <Border x:Name="DropZone"
                        Height="180"
                        Background="{ThemeResource MaterialSurfaceVariantBrush}"
                        BorderBrush="{ThemeResource MaterialOutlineVariantBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        AllowDrop="True"
                        DragOver="DropZone_DragOver"
                        Drop="DropZone_Drop">
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Spacing="12">
                        <FontIcon Glyph="&#xE8B7;" 
                                  FontSize="32"
                                  Foreground="{ThemeResource MaterialOnSurfaceVariantBrush}"/>
                        <TextBlock Text="Select or drag and drop"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Foreground="{ThemeResource MaterialOnSurfaceVariantBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Supported: TXT, PDF, DOCX, MD"
                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource MaterialOnSurfaceVariantBrush}"
                                   HorizontalAlignment="Center"/>
                        <Button x:Name="BrowseButton"
                                Content="Browse Files"
                                Style="{ThemeResource DefaultButtonStyle}"
                                Background="{ThemeResource MaterialSecondaryBrush}"
                                Foreground="{ThemeResource MaterialOnSecondaryBrush}"
                                Click="BrowseButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- File Info -->
                <StackPanel x:Name="FileInfoPanel" Visibility="Collapsed" Spacing="8">
                    <TextBlock x:Name="SelectedFileText"
                               Text="Selected File: document.pdf"
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource MaterialOnSurfaceBrush}"/>
                    <TextBlock x:Name="FileSizeText"
                               Text="Size: 2.3 MB"
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource MaterialOnSurfaceVariantBrush}"/>
                    
                    <!-- LLM Indicator Box -->
                    <Border Background="{ThemeResource MaterialSurfaceVariantBrush}"
                            BorderBrush="{ThemeResource MaterialOutlineVariantBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8B8;" 
                                      FontSize="16"
                                      Foreground="{ThemeResource MaterialPrimaryBrush}"/>
                            <TextBlock x:Name="LLMIndicatorText"
                                       Text="LLM: Ollama - llama3.2:3b"
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource MaterialOnSurfaceVariantBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Right Panel: Action Buttons -->
            <StackPanel Grid.Column="2" Spacing="8" VerticalAlignment="Top">
                <Button x:Name="ConvertToTextButton"
                        Content="Convertir en text brut"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="ConvertToTextButton_Click"
                        IsEnabled="False"/>
                
                <Button x:Name="GenerateSummaryButton"
                        Content="Faire un résumé"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="GenerateSummaryButton_Click"
                        IsEnabled="False"/>
                
                <Button x:Name="ResetButton"
                        Content="Reset"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="ResetButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Bottom Section: Preview Area -->
        <Grid Grid.Row="1" Margin="24,0,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Preview Header -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="Preview"
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Foreground="{ThemeResource MaterialOnSurfaceBrush}"
                           VerticalAlignment="Center"/>
                
                <!-- Toggle Switch -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="Text brut"
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource MaterialOnSurfaceVariantBrush}"
                               VerticalAlignment="Center"/>
                    <ToggleSwitch x:Name="ViewModeToggle"
                                  OnContent="Résumé"
                                  OffContent=""
                                  Toggled="ViewModeToggle_Toggled"/>
                </StackPanel>
            </Grid>

            <!-- Preview Content -->
            <Border Grid.Row="1"
                    Background="{ThemeResource MaterialSurfaceBrush}"
                    BorderBrush="{ThemeResource MaterialOutlineBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <ScrollViewer Padding="16" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="PreviewTextBox"
                             PlaceholderText="pas de donnée"
                             Background="Transparent"
                             BorderThickness="0"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="300"
                             FontFamily="Consolas"
                             FontSize="14"
                             Foreground="{ThemeResource MaterialOnSurfaceBrush}"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay"
                Grid.RowSpan="2"
                Background="#80000000"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{ThemeResource MaterialSurfaceBrush}"
                        Padding="32"
                        CornerRadius="8"
                        Spacing="16">
                <ProgressRing IsActive="True"
                              Width="48"
                              Height="48"
                              Foreground="{ThemeResource MaterialPrimaryBrush}"/>
                <TextBlock x:Name="LoadingText"
                           Text="Processing file..."
                           Style="{ThemeResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource MaterialOnSurfaceBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</ContentDialog>
